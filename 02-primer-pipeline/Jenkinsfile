pipeline {
    agent any

    stages {
        stage('docker build') {
            steps {
                script {
                    sh "podman build -f 02-primer-pipeline/Dockerfile -t saulmls/pipeline:1.0.0-${BUILD_ID} 02-primer-pipeline"
                }
            }
        }
        stage('docker push') {
            steps {
                script {
                    sh "podman push saulmls/pipeline:1.0.0-${BUILD_ID}"
                }
            }
        }
    }
}
